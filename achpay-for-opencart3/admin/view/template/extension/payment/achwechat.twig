{{ header }}{{ column_left }}
<div id="content">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1><i class="fa fa-credit-card"></i> {{ heading_title }}</h1>
    </div>
  </div>
  <div class="container-fluid">
    <div class="panel-body">

      <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
       
       {% if error_warning %}
	    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> 测试{{error_warning}}
	      <button type="button" class="close" data-dismiss="alert">&times;</button>
	    </div>
     {% elseif success %}
 
	    <div class="alert alert-success"><i class="fa fa-exclamation-circle"></i> {{success}}
	      <button type="button" class="close" data-dismiss="alert">&times;</button>
	    </div>
	   {% endif %}
    
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_achwechat_status" id="input-status" class="form-control">
                
                {% if payment_achwechat_status %}
                
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                
                {% else %}
                
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                
                {% endif %}
              
              </select>
            </div>
          </div>
          
            
            <div class="form-group required">
	            <label class="col-sm-2 control-label">{{ entry_achwechat_appid }}</label>
	            <div class="col-sm-10">
	              <input type="text" name="payment_achwechat_appid" value="{{payment_achwechat_appid}}" placeholder="" class="form-control" />
	            </div>
	        </div>
          
          	<div class="form-group required">
	            <label class="col-sm-2 control-label">{{entry_achwechat_appsecret}}</label>
	            <div class="col-sm-10">
                    <textarea name="payment_achwechat_appsecret" placeholder="" cols="30" rows="5" class="form-control">{{payment_achwechat_appsecret}}</textarea>
	            </div>
	        </div>
	        
	        <div class="form-group required">
	            <label class="col-sm-2 control-label">{{entry_achwechat_transaction_url}}</label>
	            <div class="col-sm-10">
	              <input type="text" name="payment_achwechat_transaction_url" value="{{payment_achwechat_transaction_url}}" placeholder="" class="form-control" />
	            </div>
	        </div>
            
            <div class="form-group required">
	            <label class="col-sm-2 control-label"><span data-toggle="tooltip" title="{{entry_order_prefix_desc}}">{{entry_order_prefix}}</span></label>
	            <div class="col-sm-10">
	              <input type="text" name="payment_achwechat_order_prefix" value="{{payment_achwechat_order_prefix}}"  class="form-control" />
	            </div>
	          </div>
            
             <div class="form-group">
	            <label class="col-sm-2 control-label" >{{entry_order_succeed_status}}</label>
				<div class="col-sm-10">
	           <select name="payment_achwechat_order_succeed_status_id" class="form-control">
	              {% for order_status in order_statuses %}
		              {%  if order_status.order_status_id == payment_achwechat_order_succeed_status_id %}
		              <option value="{{order_status.order_status_id}}" selected="selected">{{order_status.name}}</option>
		              {% else %}
		              <option value="{{order_status.order_status_id}}">{{order_status.name}}</option>
		              {% endif %}
	              {% endfor %}
	            </select>
	              </div>
	          </div>
	          
	          
	          <div class="form-group">
		    	<label class="col-sm-2 control-label">{{entry_order_failed_status}}</label>
		         <div class="col-sm-10">
		          <select name="payment_achwechat_order_failed_status_id" class="form-control">
	              {% for order_status in order_statuses %}
		              {%  if order_status.order_status_id == payment_achwechat_order_failed_status_id %}
		              <option value="{{order_status.order_status_id}}" selected="selected">{{order_status.name}}</option>
		              {% else %}
		              <option value="{{order_status.order_status_id}}">{{order_status.name}}</option>
		              {% endif %}
	              {% endfor %}
	            </select>
	            </div>
          </div>
        
         <div class="form-group">
            <label class="col-sm-2 control-label" for="input-geo-zone">{{entry_geo_zone}}</label>
            <div class="col-sm-10">
              <select name="payment_achwechat_geo_zone_id" id="input-geo-zone" class="form-control">
                <option value="0">{{text_all_zones}}</option>
                {% for geo_zone in geo_zones %}
                {% if geo_zone.geo_zone_id == payment_achwechat_geo_zone_id %}
                <option value="{{geo_zone.geo_zone_id}}" selected="selected">{{geo_zone.name}}</option>
               {% else %}
                <option value="{{geo_zone.geo_zone_id}}">{{geo_zone.name}}</option>
                {% endif %}
               {% endfor %}
              </select>
            </div>
          </div>
         
        
         <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{entry_sort_order}}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_achwechat_sort_order" value="{{payment_achwechat_sort_order}}" placeholder="{{payment_achwechat_sort_order}}" id="input-sort-order" class="form-control" />
            </div>
          </div>
        
          </div>
        </div>
      </form>
</div>
{{ footer }}